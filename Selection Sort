//java solution

public class Solution {
    public static void selectionSort(int[] arr) {
        //Your code goes here
        for(int i=0;i<arr.length;i++){
            int mini=i;
            for(int j=0;j<i;j++){
                if(arr[j]>arr[mini]){
                    mini=j;
                    int temp=arr[mini];
                    arr[mini]=arr[i];
                    arr[i]=temp;                    
                }
            }
        }
    }
}
